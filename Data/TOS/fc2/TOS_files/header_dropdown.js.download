//------------------------------------------------------------------------------------------------------------------------------

$(function() {
$('.btn-drop-help').on({
    'mouseenter': function() {
    $('.l-drop-help').fadeToggle('fast');
    },
    'mouseleave': function() {
    $('.l-drop-help').hide();
    },
    'click': function() {
    $('.l-drop-help').fadeToggle('fast');
    }
  });
});
